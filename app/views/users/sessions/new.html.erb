<div class="c-devise-form">
  <div class="container">
    <div class="row">
      <div class="col-11 col-sm-8 col-md-6 col-lg-5 text-center mx-auto">
        <div class="c-devise-form__wrapper">
          <h3 class="mb-4">ログイン</h3>
          <div class="form-group">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field mb-3 d-flex">
                <%# <i class="fas fa-envelope"></i> %>
                <%= f.email_field :email, autofocus: "autofocus", autocomplete: "email", class: "form-control", placeholder: "example@gmail.com" %>
              </div>

              <div class="field d-flex">
                <%# <i class="fa fa-lock"></i> %>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field text-left mt-2">
                  <%= f.check_box :remember_me %>
                  <%= f.label :ログインを記憶 %>
                </div>
              <% end %>

              <div class="actions">
                <%= f.submit "ログイン", class: "btn c-devise-form__submit-btn" %>
              </div>
            <% end %>
          <div>
        <div>
        <%= render "users/shared/links" %>
      <div>
    </div>
  </div>
</div>
