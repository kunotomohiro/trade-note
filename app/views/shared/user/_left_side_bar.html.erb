<div class="col-3 p-user-left-side-bar text-center d-none d-lg-block">
  <div>
    <%= image_tag current_user.user_profile.avatar.variant(resize_to_fill: [200, 200],crop: "200x200+0+0").processed, class: "p-trade__avatar" %>
  </div>
  <div class="mt-2 p-user-left-side-bar__user-name">
    <%= current_user.user_profile.nickname %>
    <%= link_to edit_user_user_profile_path, class: "d-inline-block" do %>
      <i class="fa fa-edit"></i>
    <% end %>
  </div>
  <hr>
  <div class="text-left">
    <p>トレード</p>
  </div>
  <div class="text-center">
    <div>
      <%= link_to "トレード一覧", user_trades_path %>
    </div>
    <div>
      <%= link_to "トレードを記録する", new_user_trade_path %>
    </div>
  </div>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
</div>