<div class="mt-5" id="trade">
  <div class="row">
    <%= render "shared/user/left_side_bar" %>
    <div class="col-8 col-lg-6 p-trade__card">
      <div>
        <%= image_tag @trade.image, class: "p-trade__card-image" %>
      </div>
      <div class="p-trade__card-content">
        <div>
          <p>カテゴリー： <%= @trade.trade_category.name %></p>
        </div>
        <div>
          <p>スタイル： <%= @trade.trade_style.name %></p>
        </div>
        <div>
          <p>Pips： <%= @trade.pips %></p>
        </div>
        <div>
          <p>エントリー： <%= @trade.entry_time.strftime("%Y年 %m月%d日") %></p>
        </div>
        <div>
          <p>決済： <%= @trade.exit_time.strftime("%Y年 %m月%d日") %></p>
        </div>
        <div>
          <p>結果： <%= @trade.result %></p>
        </div>
        <div>
          <p>メモ</p>
          <textarea><%= @trade.content %></textarea>
        </div>
        <div class="row">
          <div class="col-6">
            <%= link_to user_trade_path, class: "btn p-trade__card__delete-btn mt-4", method: :delete, data: { confirm: "本当に削除しますか？" }  do %>
              削除
            <% end %>
          </div>
          <div class="col-6">
            <%= link_to edit_user_trade_path, class: "btn c-devise-form__submit-btn mt-4" do %>
              編集
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>